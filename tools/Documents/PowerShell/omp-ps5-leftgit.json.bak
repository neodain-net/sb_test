{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title": false,
  "transient_prompt": { "enabled": false },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#FFFFFF",
          "background": "#E9A41A",               // PS7 느낌의 주황
          "properties": {
            "style": "folder",                   // 마지막 폴더만
            "max_depth": 3,
            "folder_separator_icon": ""
          },
          "template": "   {{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#000000",
          "background": "#2ECC71",               // PS7 느낌의 초록
          "properties": {
            "fetch_status": true,
            "display_status": true
          },
          "template": "  {{ .HEAD }}{{ if gt .Working.Modified 0 }} ~{{ .Working.Modified }}{{ end }}{{ if gt .Staging.Added 0 }} +{{ .Staging.Added }}{{ end }}{{ if gt .Working.Untracked 0 }} ?{{ .Working.Untracked }}{{ end }}{{ if gt .Ahead 0 }} ⇡{{ .Ahead }}{{ end }}{{ if gt .Behind 0 }} ⇣{{ .Behind }}{{ end }} "
        }
      ]
    }
  ]
}
